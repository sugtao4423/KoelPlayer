<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <sugtao4423.koelplayer.view.SquareImageView
            android:id="@+id/playlistCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description_album_cover"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/playlistTitle"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlistCover"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/playlist_item_text_padding"
            android:paddingTop="@dimen/playlist_item_text_padding_top"
            android:paddingRight="@dimen/playlist_item_text_padding"
            android:paddingBottom="@dimen/playlist_item_text_padding" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>